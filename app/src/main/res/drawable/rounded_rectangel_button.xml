<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="@color/Green"
                android:centerColor="@color/GreenDarker"
                android:endColor="@color/GreenDarkest"
                android:angle="270" />
            <corners
                android:radius="2pt" />
            <padding
                android:left="1pt"
                android:top="1pt"
                android:right="1pt"
                android:bottom="1pt" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:centerColor="@color/GreenPressed"
                android:angle="270" />
            <corners
                android:radius="2pt" />
            <padding
                android:left="1pt"
                android:top="1pt"
                android:right="1pt"
                android:bottom="1pt" />
        </shape>
    </item>
</selector>